{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.excel) }}
        </div>
    </div>
    {{ form_end(form) }}
    {{ filename }}

    {% if dtos is not empty %}
    <table>
        <tr>
            <th>City</th>
            <th>Maker</th>
            <th>Model</th>
            <th>VIN</th>
            <th>Agency</th>
        </tr>
        {% for dto in dtos %}
            <tr>
                <td>{{ dto.city }}</td>
                <td>{{ dto.refMaker }}</td>
                <td>{{ dto.refModel }}</td>
                <td>{{ dto.vin }}</td>
                <td>{{ dto.agency }}</td>
            </tr>
        {% endfor %}
    </table>
    {% endif %}
</div>
{% endblock %}
